{% extends 'admin/base.html.twig' %}

{% block title %}Sales{% endblock %}

{% block body %}
    <h1>Sales</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sale.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ sale.message }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ sale.discount }}</td>
            </tr>
            <tr>
                <th>Date_begin</th>
                <td>{{ sale.dateBegin ? sale.dateBegin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{{ sale.dateEnd ? sale.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sales_index') }}">back to list</a>

    <a href="{{ path('app_sales_edit', {'id': sale.id}) }}">edit</a>

    {{ include('sales/_delete_form.html.twig') }}
{% endblock %}
